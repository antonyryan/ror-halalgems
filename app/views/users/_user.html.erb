<li class="list-group-item">  
  <%= link_to user.name, user%>
  
  <% if current_user.admin? && !current_user?(user) %>
    <span class="badge"> <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
                                  </span>
  <% end %>
</li>
