<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">    
    <section>
    	<%= image_tag(@user.avatar_url, width: 180, height: 220) %>    	
    </section>
    <section class="name">
      <p><span class="glyphicon glyphicon-user"></span> <%= @user.name %>
      <p><span class="glyphicon glyphicon-earphone"></span> <%= @user.phone %>
      <p><span class="glyphicon glyphicon-envelope"></span> <%= mail_to @user.email %>
    </section>
    <section >

      <% if current_user.admin? %>
        <%= button_to "edit", edit_user_path(@user), method: :get, class: "btn btn-primary pull-left" %>        
      <% end %>

      <% if current_user.admin? && !current_user?(@user) %>
        <%= button_to "delete", @user, method: :delete,
                                  data: { confirm: "You sure?" }, class: "btn btn-danger pull-left" %>
      <% end %>      
    </section>
  </aside>
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-12">
        <h2>Listings
        <div class="pull-right">
        <%= link_to "Create rental", new_listing_path(listing_type_id: @rental_id), role:'button', class: "btn btn-primary" %> 
        <%= link_to "Create sale", new_listing_path(listing_type_id: @sale_id), role:'button', class: "btn btn-primary" %></div></h2>
        
      </div>       
    
    <div calss="row">
      <div class="col-sm-12">
      <% if @user.listings.any? %>
        <div class="list-group">
          <%= render @listingss %>        
          <%= will_paginate @listingss %>
        </div>
      <% end %>     
    </div>
  </div>
  </div>
</div>
</div>