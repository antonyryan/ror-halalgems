<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div class="form-group">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>

		<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
		
	</div>
</div>