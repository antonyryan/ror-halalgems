<% provide(:title, @listing.full_address) %>
<% provide(:java_script, "https://maps.googleapis.com/maps/api/js") %>
<div class="row">
	<div class="col-md-6">
		<h1 id="address" data-value="<%= @listing.full_address %>"><%= @listing.full_address %> <small><%= @listing.listing_type.name unless @listing.listing_type.nil? %></small></h1>
		<h3 class="zip">Zip: <%= @listing.zip_code %></h3>
	</div>

	<div class="col-md-6">
		<h2 class="text-right"><%= number_to_currency(@listing.price) %></h2>
		<h3 class="property_type text-right"><%= @listing.property_type.name unless @listing.property_type.nil? %></h3>
	</div>
</div>

<%= button_to "Edit listing", edit_listing_path(@listing), method: :get, class: "btn btn-default" %>

<div class="row">
	<div class="col-md-10 col-md-offset-1" >	
		<% if @listing.property_photos.count > 0 %>			
			<% photo = @listing.property_photos.first %>			
			<%= image_tag(photo.photo_url_url, :width => '100%') %>
		<% else %>
			<%= image_tag("no_photo.png", :width => '100%') %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-8  property-rooms">
		<%= @listing.bed.name %> / <%= @listing.full_baths_no %> full baths / <%= @listing.half_baths_no %> half baths
        <p>
        Days on market: <%= @listing.days_on_market %>
	</div>
	<div class="col-md-4 property-size text-right">
		<%= @listing.status.name unless @listing.status.nil? %>
	</div>
</div>

<div class="row">
	<div class="col-md-8 property-description">
		<%= @listing.description %>
	</div>
	<div class="col-md-4 property-size text-right">
		<div id="map-canvas"></div>
	</div>
</div>
