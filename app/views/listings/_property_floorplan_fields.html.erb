<div class="col-sm-6 col-md-3">
  <fieldset>
    <div class="thumbnail">
    
      <% if not f.object.floorplan_url_url(:thumb).blank? %>
        <% if f.object.floorplan_url_url.include? ".ai" %>
          <%= image_tag(f.object.floorplan_url_url(:thumb).gsub!(".ai",".jpg")) %>
        <% else %>
          <%= image_tag(f.object.floorplan_url_url(:thumb)) %>
        <% end %>
      <% end %>
      <div class="caption">
        <div class="form-group">
          <%= f.label :order_num, 'Order', class: 'sr-only control-label' %>
          <%= f.text_field :order_num, class: 'form-control', placeholder: 'Order' %>
        </div>

        <%= f.hidden_field :_destroy %>
        <%= link_to 'remove', '#', class: 'remove_fields' %>
        <% if not f.object.floorplan_url_url.blank? and f.object.floorplan_url_url.include? ".ai" %>
        <a target="_blank" class="view_pdf" href="<%= f.object.floorplan_url_url %>" style="margin-left:10px">view_pdf</a>
        <% end %>
      </div>
    </div>
  </fieldset>
</div>