<div class="col-sm-6 col-md-3">
  <fieldset>
    <div class="thumbnail">
    
      <% if not f.object.floorplan_url_url(:thumb).blank? %>
        <% if f.object.floorplan_url_url(:thumb).include? ".jpg" or f.object.floorplan_url_url(:thumb).include? ".png" %>
          <%= image_tag(f.object.floorplan_url_url(:thumb)) %>
        <% else %>
          <a href="<%= f.object.floorplan_url_url %>" target="_blank">
            <%= image_tag(f.object.floorplan_url_url(:thumb).gsub!(".ai",".jpg")) %>
          </a>
        <% end %>
      <% end %>
      <div class="caption">
        <div class="form-group">
          <%= f.label :order_num, 'Order', class: 'sr-only control-label' %>
          <%= f.text_field :order_num, class: 'form-control', placeholder: 'Order' %>
        </div>

        <%= f.hidden_field :_destroy %>
        <%= link_to 'view_pdf', '#', class: 'view_pdf hidden' %>
        <%= link_to 'remove', '#', class: 'remove_fields' %>
      </div>
    </div>
  </fieldset>
</div>