<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Заголовок модального окна -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h4 class="modal-title" id="myModalLabel">Input email address</h4>
      </div>
      <!-- Основная часть модального окна, содержащая форму для регистрации -->
      <div class="modal-body">
        <!-- Форма для регистрации -->
        <%= form_tag send_email_listings_path, id:'send_email_form', role: 'form', class: 'form-horizontal' do -%>

            <!-- Блок для ввода email -->
          <div class="form-group has-feedback">
            <%= label_tag 'email', nil,  class: 'control-label col-xs-3'  %>
            <div class="col-xs-6">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <%= email_field_tag 'email', nil, class: 'form-control', required: 'required' %>
              </div>
              <span class="glyphicon form-control-feedback"></span>
            </div>
          </div>
          <!-- Конец блока для ввода email-->
        <% end %>
      </div>
      <!-- Нижняя часть модального окна -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button id="send" type="button" class="btn btn-primary">Send</button>
      </div>
    </div>
  </div>
</div>