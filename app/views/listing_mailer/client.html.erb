<html>
<head>
  <title>Listings | Horowitz Real Estate</title>
</head>

<body bgcolor="#ffffff" margin="0" padding="0">
<% @listings.each do |listing| %>
    <table width="600" align="center">
      <tr>
        <td>
          <table width="100%" cellspacing="0">
            <tr>
              <td>
                <a href="http://myastoriarealestate.com/"><img src="<%= image_url("logo.png") %>" alt="Horowitz Real Estate"></a>
              </td>
              <td bgcolor="#0095da" style="padding-top: 10px; color: #ffffff; font-size: 16px; font-family: 'Open Sans', sans-serif; text-align: center; vertical-align: bottom;"><%= (listing.listing_type.try :name || '').upcase %></td>
            </tr>
            <tr>
              <td width="430">
                <h1 style="margin: 10px 0; font-size: 26px; font-family: 'Open Sans', sans-serif; color: #444; line-height: 1.3;"><%= listing.headline %></h1>
              </td>
              <td bgcolor="#0095da" style="font-size: 34px; font-weight: bold; font-family: 'Open Sans', sans-serif; color: #ffffff; text-align: center;"><%= number_to_currency(listing.price) %></td>
            </tr>
            <tr>
              <td colspan="2" style="padding-top: 10px; border-top: 5px solid #0095da; font-family: 'Open Sans', sans-serif; color: #444;"><%= (listing.property_type.present? ? listing.property_type.name : '') +
                                                                                                                                                       (listing.unit_no.present? ? " / Unit no: #{listing.unit_no}" : '') %></td>
            </tr>
          </table>
          <%
             images = listing.property_photos.to_a
             images_count = images.size
          %>
          <table width="100%" cellspacing="10">
            <tr>
              <td colspan="2">
                <% if images_count > 0 and images[0].photo_url_url.present? %>
                    <img src="<%= images[0].photo_url_url %>" width="100%" style="display: block;">
                <% end %>
              </td>
            </tr>
            <tr>
              <td colspan="2" style="padding: 15px 0; font-family: 'Open Sans', sans-serif; color: #444;">
                <p style="font-size: 16px; line-height: 1.7;"><%= listing.description %></p>
              </td>
            </tr>
            <tr>
              <td>
                <p style="margin: 0; background-color: #efefef; text-align: center;">
                  <% if images_count > 1 and images[1].photo_url_url.present? %>
                      <img src="<%= images[1].photo_url_url(:thumb) %>" width="280" style="margin: 0 auto; display: block;">
                  <% end %>
                </p>
              </td>
              <td>
                <p style="margin: 0; background-color: #efefef; text-align: center;">
                  <% if images_count > 2 and images[2].photo_url_url.present? %>
                      <img src="<%= images[2].photo_url_url(:thumb) %>" width="280" style="margin: 0 auto; display: block;">
                  <% end %>
                </p>
              </td>
            </tr>
            <tr>
              <td>
                <p style="margin: 0; background-color: #efefef; text-align: center;">
                  <% if images_count > 3 and images[3].photo_url_url.present? %>
                      <img src="<%= images[3].photo_url_url(:thumb) %>" width="280" style="margin: 0 auto; display: block;">
                  <% end %>
                </p>
              </td>
              <td>
                <p style="margin: 0; background-color: #efefef; text-align: center;">
                  <% if images_count > 4 and images[4].photo_url_url.present? %>
                      <img src="<%= images[4].photo_url_url(:thumb) %>" width="280" style="margin: 0 auto; display: block;">
                  <% end %>
                </p>
              </td>
            </tr>
            <tr>
              <td>
                <p style="margin: 0; background-color: #efefef; text-align: center;">
                  <% if images_count > 5 and images[5].photo_url_url.present? %>
                      <img src="<%= images[5].photo_url_url(:thumb) %>" width="280" style="margin: 0 auto; display: block;">
                  <% end %>
                </p>
              </td>
              <td>
                <p style="margin: 0; background-color: #efefef; text-align: center;">
                  <% if images_count > 6 and images[6].photo_url_url.present? %>
                      <img src="<%= images[6].photo_url_url(:thumb) %>" width="280" style="margin: 0 auto; display: block;">
                  <% end %>
                </p>
              </td>
            </tr>
            <tr>
              <td valign="top" style="font-size: 16px; font-family: 'Open Sans', sans-serif; color: #444;">
                <ul style="padding: 10px 0 0 0; font-weight: bold; list-style: none;">
                  <li style="padding-bottom:5px; color: #0095da;">Residence Information</li>
                  <li style="margin-top: 5px;"><%= listing.bed.name %></li>
                  <li style="margin-top: 5px;"><%= listing.full_baths_no %> full baths</li>
                  <li style="margin-top: 5px;"><%= listing.half_baths_no %> half baths</li>
                </ul>
              </td>
              <td valign="top" style="font-size: 16px; font-family: 'Open Sans', sans-serif; color: #444;">
                <ul style="padding: 10px 0 0 0; font-weight: bold; list-style: none;">
                  <li style="padding-bottom:5px; color: #0095da;">Features</li>
                  <%
                     features = listing.features.split(', ')
                     features.each do |feature|
                  %>

                      <li style="margin-top: 5px;"><%= feature %></li>
                  <% end %>
                </ul>
              </td>
            </tr>
            <tr>
              <td valign="top" style="font-size: 16px; font-family: 'Open Sans', sans-serif; color: #444;">
                <ul style="padding: 10px 0 0 0; font-weight: bold; list-style: none;">
                  <li style="padding-bottom:5px; color: #0095da;">Pets</li>
                  <%
                     pets = listing.pets.split(', ')
                     pets.each do |pet|
                  %>
                      <li style="margin-top: 5px;"><%= pet %></li>
                  <% end %>
                </ul>
              </td>
              <td valign="top" style="font-size: 16px; font-family: 'Open Sans', sans-serif; color: #444;">
                <ul style="padding: 10px 0 0 0; font-weight: bold; list-style: none;">
                  <li style="padding-bottom:5px; color: #0095da;">Utilities</li>
                  <%
                     utilities = listing.utilities.split(', ')
                     utilities.each do |utility|
                  %>
                      <li style="margin-top: 5px;"><%= utility %></li>
                  <% end %>
                </ul>
              </td>
            </tr>
          </table>
          <table width="100%" cellspacing="10">
            <tr>
              <td style="padding-top:10px;">
                <p style="border: 1px solid #999999;">
                  <!-- todo: use coords instead of address -->
                  <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= url_encode(listing.full_address) %>&zoom=16&size=572x400&sensor=false" width="572" height="400" style="display: block;">
                </p>
              </td>
            </tr>
            <tr>
              <td>
                <table cellspacing="0" style="margin-top: 20px;">
                  <tr>
                    <td width="5" rowspan="2" valign="top" style="padding: 0;">
                      <img src="<%= image_url("tit_agent_before.png") %>"></td>
                    <td width="389" style="padding: 0; vertical-align: top; background: #f2f2f2;">
                      <img src="<%= image_url("tit_agent.png") %>" alt="Agent"/></td>
                    <td width="180" rowspan="2" style="background: #f2f2f2;">
                      <img src="<%= @agent.avatar_url %>" width="180" height="220" alt="Agent: <%= @agent.name %>" style="display: block;">
                    </td>
                  </tr>
                  <tr>
                    <td style="background: #f2f2f2; padding: 0; padding-left: 15px; font-size: 16px; font-family: 'Open Sans', sans-serif; color: #444;">
                      <h3 style="margin: 0; font-size: 23px;"><%= @agent.name %></h3>
                      <ul style="margin-bottom: 0; padding:0; list-style: none;">
                        <li style="color: #0095da; font-weight: bold;">Phone</li>
                        <li style="color: #444444;"><%= @agent.phone %></li>
                      </ul>
                      <ul style="margin-top: 0; padding: 0; list-style: none;">
                        <li style="color: #0095da; font-weight: bold;">Email</li>
                        <li><a href="mailto:<%= @agent.email %>" style="color: #444444;"><%= @agent.email %></a>
                        </li>
                      </ul>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
<% end %>
<a href="http://myastoriarealestate.com" style="margin: 20px; display: block; text-align: center; font-size: 12px; font-family: 'Open Sans', sans-serif; color: #444; text-decoration: none;">Copyright &copy;2015
  Horowitz Real Estate Inc. All rights reserved</a>
</body>
</html>